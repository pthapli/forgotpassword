<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pratyush.forgotpassword.ProfileActivity">

    <TextView
        android:id="@+id/textViewcheckprofile"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_horizontal"
        android:text="welcome user you have successfully logged in"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="124dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notifidemo"
            android:layout_centerHorizontal="true"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressbarprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

             />
    </RelativeLayout>

    <EditText
        android:id="@+id/edittextprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name" />

    <TextView
        android:id="@+id/textviewverified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="verified"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/buttonsend"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="61dp"
        android:text="send" />

    <Button
        android:id="@+id/buttonsignout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sign out" />






</LinearLayout>
